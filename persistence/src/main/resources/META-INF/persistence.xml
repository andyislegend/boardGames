<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:/DefaultDS</jta-data-source>

		<class>com.softserveinc.edu.boardgames.persistence.entity.Address</class> 
		<class>com.softserveinc.edu.boardgames.persistence.entity.Event</class>
		<class>com.softserveinc.edu.boardgames.persistence.entity.Category</class> 
		<class>com.softserveinc.edu.boardgames.persistence.entity.Game</class>
		<class>com.softserveinc.edu.boardgames.persistence.entity.GameUser</class>   
		<class>com.softserveinc.edu.boardgames.persistence.entity.Tournament</class>
		<class>com.softserveinc.edu.boardgames.persistence.entity.TournamentComposition</class>
		<class>com.softserveinc.edu.boardgames.persistence.entity.User</class>
		<class>com.softserveinc.edu.boardgames.persistence.entity.Friend</class>      
		

		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<!--  <property name="hibernate.hbm2ddl.auto" value="create"/>-->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.enable_lazy_load_no_trans" value="true"/>
		</properties>
		
	</persistence-unit>
</persistence>
